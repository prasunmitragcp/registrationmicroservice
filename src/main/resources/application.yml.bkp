server:
  port: 8087
  error:
    include-message: always
    include-binding-errors: always

spring: 
  datasource:
    password: admin
    url: jdbc:mysql://localhost:3306/registration
    username: root
    driver-class-name: com.mysql.cj.jdbc.Driver
  jpa:
    hibernate:
      ddl-auto: create-drop
    properties:
      hibernate:
        dialect: org.hibernate.dialect.MySQL8Dialect
        format_sql: true
    show-sql: true